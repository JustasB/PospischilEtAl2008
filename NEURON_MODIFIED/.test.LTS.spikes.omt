# Script for running automated tests on OSB using Travis-CI, see https://github.com/OpenSourceBrain/osb-model-validation 

target: "test_LTS_ModelDB.hoc"
engine: NEURON
mep: .test.LTS.spikes.mep
experiments:
  spikes:
    observables:
      spike times:
        file: 
          path: LTS.v.dat
          columns: [0,1]
          scaling: [1000, 1000]
        spike detection: 
          method: threshold
          threshold: 0
        tolerance: 0
